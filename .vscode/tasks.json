// Available variables which can be used inside of strings:
// ${workspaceFolder} the path of the workspace folder that contains the tasks.json file
// ${workspaceFolderBasename} the name of the workspace folder that contains the tasks.json file without any slashes (/)
// ${file} the current opened file
// ${relativeFile} the current opened file relative to the workspace folder containing the file
// ${fileBasename} the current opened file's basename
// ${fileBasenameNoExtension} the current opened file's basename without the extension
// ${fileDirname} the current opened file's dirname
// ${fileExtname} the current opened file's extension
// ${cwd} the task runner's current working directory on startup
// ${lineNumber} the current selected line number in the active file
{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "RemoteSigned",
                    "-Command"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Build EXE",
            "type": "shell",
            "command": "Copy-Item -Path '${cwd}\\exe' -Destination '${cwd}\\${input:installerName}' -Recurse -Force -Verbose",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build MSI",
            "type": "shell",
            "command": "Copy-Item -Path '${cwd}\\msi' -Destination '${cwd}\\${input:installerName}' -Recurse -Force -Verbose",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build PADT",
            "type": "shell",
            "command": "Copy-Item -Path '${cwd}\\PSAppDeployToolkit_v3.8.3\\Toolkit' -Destination '${cwd}\\${input:installerName}' -Recurse -Force -Verbose",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test Install",
            "type": "shell",
            "command": "Start-Process powershell -ArgumentList '-NoLogo -NoProfile -ExecutionPolicy Bypass -File ${file}' -Verb RunAs",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Test Install Interactive PADT",
            "type": "shell",
            "command": "Start-Process psexec -ArgumentList '-i -s powershell -NoExit -NoProfile -ExecutionPolicy Bypass ${file} -DeploymentType Install -DeployMode Interactive' -Verb runAs",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test Install Non-Interactive PADT",
            "type": "shell",
            "command": "Start-Process psexec -ArgumentList '-i -s powershell -NoExit -NoProfile -ExecutionPolicy Bypass ${file} -DeploymentType Install -DeployMode NonInteractive' -Verb runAs",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test Install Silent PADT",
            "type": "shell",
            "command": "Start-Process psexec -ArgumentList '-i -s powershell -NoExit -NoProfile -ExecutionPolicy Bypass ${file} -DeploymentType Install -DeployMode Silent' -Verb runAs",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test Uninstall Interactive PADT",
            "type": "shell",
            "command": "Start-Process psexec -ArgumentList '-i -s powershell -NoExit -NoProfile -ExecutionPolicy Bypass ${file} -DeploymentType Uninstall -DeployMode Interactive' -Verb runAs",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test Uninstall Non-Interactive PADT",
            "type": "shell",
            "command": "Start-Process psexec -ArgumentList '-i -s powershell -NoExit -NoProfile -ExecutionPolicy Bypass ${file} -DeploymentType Uninstall -DeployMode Non-Interactive' -Verb runAs",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test Uninstall Silent PADT",
            "type": "shell",
            "command": "Start-Process psexec -ArgumentList '-i -s powershell -NoExit -NoProfile -ExecutionPolicy Bypass ${file} -DeploymentType Uninstall -DeployMode Silent' -Verb runAs",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
          "type": "promptString",
          "id": "installerName",
          "description": "Name your installer.",
          "default": "temp_installer"
        }
      ]
}
