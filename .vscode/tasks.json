// Available variables which can be used inside of strings:
// ${workspaceFolder} the path of the workspace folder that contains the tasks.json file
// ${workspaceFolderBasename} the name of the workspace folder that contains the tasks.json file without any slashes (/)
// ${file} the current opened file
// ${relativeFile} the current opened file relative to the workspace folder containing the file
// ${fileBasename} the current opened file's basename
// ${fileBasenameNoExtension} the current opened file's basename without the extension
// ${fileDirname} the current opened file's dirname
// ${fileExtname} the current opened file's extension
// ${cwd} the task runner's current working directory on startup
// ${lineNumber} the current selected line number in the active file
{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "RemoteSigned",
                    "-Command"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Build Deployment",
            "type": "shell",
            "command": "Copy-Item -Path '${cwd}\\${input:Template}' -Destination '${cwd}\\${input:Name}' -Recurse -Force -Verbose",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Test Install",
            "type": "shell",
            "command": "Start-Process powershell -ArgumentList '-NoProfile -ExecutionPolicy Bypass -File ${file}' -Verb RunAs",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Test PADT",
            "type": "shell",
            "command": "Start-Process powershell -ArgumentList '-NoProfile -ExecutionPolicy Bypass ${file} -DeploymentType ${input:Type} -DeployMode ${input:Mode}' -Verb runAs",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Test PADT SYSTEM NT",
            "type": "shell",
            "command": "Start-Process psexec -ArgumentList '-i -s powershell -NoProfile -ExecutionPolicy Bypass ${file} -DeploymentType ${input:Type} -DeployMode ${input:Mode}' -Verb runAs",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "focus": true,
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "Template",
            "description": "Deployment Template?",
            "options": [
                "exe",
                "msi",
                "PSAppDeployToolkit_v3.8.3"
            ],
            "default": "msi"
        },
        {
            "type": "promptString",
            "id": "Name",
            "description": "Deployment Name?",
            "default": "test"
        },
        {
            "type": "pickString",
            "id": "Type",
            "description": "Deployment Type?",
            "options": [
                "Install",
                "Uninstall"
            ],
            "default": "Install"
        },
        {
            "type": "pickString",
            "id": "Mode",
            "description": "Deployment Mode?",
            "options": [
                "Interactive",
                "Non-Interactive",
                "Silent"
            ],
            "default": "Install"
        }
      ]
}
